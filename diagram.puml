@startuml

class Player {
    +name
    +weapon=
    +a_computer?()
}

enum CompResult {
    BEATS
    DRAW
    LOSES
}

enum Weapon {
    ROCK
    PAPER
    SCISSORS

    RULES {}
    +{static} compare(weapon, other_weapon)
    +{static} random()
}

class Game {
    +result
    +{static} start(player1, player2)
    +{static} instant_access()
    +player1()
    +player2()
    +choose_weapon1()
    +choose_weapon2()
    +choose_random_weapon()
    +throw(weapon1, weapon2)
}

Game -> Player : +players[2]
Player -> Weapon : weapons

@enduml
