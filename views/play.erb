<link rel="stylesheet" type="text/css" href="/rps_style.css">

<div class="messages">
  <h2>
    You chose <%= @game.player1.weapon %>!
    <%= @game.player2.name %> chose <%= @game.player2.weapon %>!
  </h2>

  <div class="weapons">
    <div class="player1">
      <% if @game.player1.weapon == :rock %>
        <img src="/rock.png">
      <% elsif @game.player1.weapon == :paper %>
        <img src="/paper.png">
      <% elsif @game.player1.weapon == :scissors %>
        <img src="/scissors.png">
      <% end %>
    </div>

    <div class="player2">
      <% if @game.player2.weapon == :rock %>
        <img src="/rock.png">
      <% elsif @game.player2.weapon == :paper %>
        <img src="/paper.png">
      <% elsif @game.player2.weapon == :scissors %>
        <img src="/scissors.png">
      <% end %>
    </div>
  </div>

  <h2>
    <% if @game.result == 1 %>
      The result is ....... You win!
      <% elsif @game.result == -1 %>
      The result is ....... You lose!
      <% elsif @game.result == 0 %>
      It's a draw
    <% end %>
  </h2>
</div>

<div class="forwarding">
  <a href="choice">Play again</a>
</div>

